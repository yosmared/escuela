{% extends 'EscuelaCommonsBundle:Base:show-base.html.twig' %}

{# Page title and heading  #}
{% set page_title="Detalles del alumno" %}

{% block entity_details %}
<div class="row">
	<div class="col-sm-4"><strong>Nombres:</strong></div>
	<div class="col-sm-6">{{ entity.name }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Apellidos:</strong></div>
	<div class="col-sm-6">{{ entity.lastname }}</div>
</div>

<div class="row">
	<div class="col-sm-4"><strong>Cédula:</strong></div>
	<div class="col-sm-6">{{ entity.identification }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Sexo:</strong></div>
	<div class="col-sm-6">{{ entity.gender }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Ciudad de nacimiento:</strong></div>
	<div class="col-sm-6">{{ entity.cityBirth }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Fecha de nacimiento:</strong></div>
	<div class="col-sm-6">{{ entity.birthdate|date('d-m-Y') }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Dirección:</strong></div>
	<div class="col-sm-6">{{ entity.address }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Telefono:</strong></div>
	<div class="col-sm-6">{{ entity.telephone }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Fecha de ingreso:</strong></div>
	<div class="col-sm-6">{{ entity.createat|date('d-m-Y') }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Plantel de procedencia:</strong></div>
	<div class="col-sm-6">{{ entity.schoolOrigin }}</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>Vacunas:</strong></div>
	<div class="col-sm-6">
		<div>
			{% if entity.viruela %} {{ " Viruela " }} {% endif %}
	
			{% if entity.polio%} {{ " Polio " }} {% endif %}
			{% if entity.tifus%} {{ " Tifus " }} {% endif %}
			{% if entity.tetano%} {{ " Tetanos " }} {% endif %}
			{% if entity.sarampion%} {{ " Sarampion " }} {% endif %}
		</div>
</div>
</div>
<div class="row">
	<div class="col-sm-4"><strong>¿Padece alguna enfermedad?:</strong></div>
	<div class="col-sm-6"><div>{% if entity.disease%} {{ "Sí: " }} {{ entity.explain }} {% endif %}</div>
</div>
</div>


{% endblock %}

{# Edit button url #}
{% if (is_granted('EDIT',service)) or (entity.id == current_user) %}
	{% set edit_url= path('student_edit', { 'id': entity.id }) %}
{% endif %}

{# Back button url #}
{% if (is_granted('VIEW',service)) %}
	{% set back_url = path('student_list') %}
{% else %}
	{% set back_url = path('_usermanager_root') %}
{% endif %}

