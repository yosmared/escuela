{% extends "EscuelaCommonsBundle:Base:layout-base.html.twig" %}
{% block head %} 
  {{ parent() }}
  <link href="{{ asset('bundles/commons/css/jquery.navgoco.css') }}" type="text/css" rel="stylesheet" />  
  <!-- <script src="{{ asset('bundles/commons/js/script.js') }}" type="text/javascript"></script> -->
  <script src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/commons/js/script.js') }}" type="text/javascript"></script>
  <script src="{{ asset('bundles/commons/js/jquery.navgoco.js') }}" type="text/javascript"></script>
  <script type="text/javascript">
  $(document).ready(function() {
      $("#demo1").navgoco({accordion: true});
  });
</script>

{% endblock %}

{% block site_header %}
<div class="container">
    <div class="row">
		<div class="jumbotron">
			<h1>Sistema de Gestión Escolar</h1>
		   	<p>{#{ "system.name"|trans({},"layout") }#}</p>          
		</div>
	</div>
</div>   	
{% endblock %}

{% block navbar_header %}
<div class="container">
	<div class="row">	      
      <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-5">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">{{ "navbar.header.welcome"|trans({},"layout")  }} <strong>{{ app.user ? app.user.name~' '~app.user.lastname }}  </strong></span>
    </div>
  
    <div id="options-btn" class="navbar-default navbar-right">                  
      <div class="btn-group">
        <span class="btn btn-primary"><i class="fa fa-gear fa-fw"></i> {{ "navbar.header.options"|trans({},"layout") }}</span>
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="fa fa-caret-down"></span></a>
        <ul class="dropdown-menu">
          <li><a href="{{ app.user ? path('user_show', {'id': app.user.id}) }}"><i class="fa fa-pencil fa-fw"></i>{{ "navbar.header.options.profile"|trans({},"layout") }}</a></li>
          <li><a href="#"><i class="fa fa-question fa-fw"></i> {{ "navbar.header.options.help"|trans({},"layout") }}</a></li>                
          <li class="divider"></li>
          <li><a href="{{ app.user ? path('usermanager_logout') }}"><i class="fa fa-sign-out fa-fw"></i> {{ "navbar.header.options.logout"|trans({},"layout") }}</a></li>
        </ul>
      </div>
    </div>
</nav>
   </div>
</div>      
{% endblock %}


{% block side_navbar%}	
 	<div id="side-navbar" class="well col-md-3">
		{% include "EscuelaCommonsBundle::side-navbar.html.twig" %} 
	</div>
{% endblock %}


{#  Content #}
{% block content %}	
  {% block flash %}
    {% include "EscuelaCommonsBundle::flashes.html.twig" %} 
  {% endblock %}
{% endblock %}


{% block footer %}
<div class="container">
	    <div class="row clearfix">
	    	<div class="col-md-12 column well">
			   <div id="copyright">	Copyright © 2013 {{ "footer.rights.reserved"|trans({},"layout") }}</div>
			</div>
		</div>
</div>
{% endblock %}